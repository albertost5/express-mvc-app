extends ./layout/base

block content 
    main.container.mt-5
        h1.text-center.mt-5 #{title}

        blockquote.text-center Read about our clients and their experiences

        .row.opinions
            each opinion in opinions
                .col-md-6.col-lg-4.mb-4
                    .card
                        .card-body
                            blockquote.blockquote
                            p.mb-0 
                                | #{opinion.message}
                            footer.blockquote-footer 
                                | #{opinion.name}
        .row 
            .col-md-12 
                h2.d-block.w-100.col.text-center Add your opinion

            .row.justify-content-center
                .col-8 
                    form(action="/opinions", method="POST")
                        .form-group 
                            label(for="name") Name 
                            input#name(type="text", placeholder="Your name..", name="name", class="form-control", value=name)
                        .form-group 
                            label(for="email") Email 
                            input#email(type="text", placeholder="Your email..", name="email", class="form-control", value=email)
                        .form-group 
                            label(for="message") Message 
                            textarea#message(placeholder="Your message..", name="message", class="form-control", rows=3) #{message}
                        if( errors )
                            p.alert.col.alert-danger.text-center.mt-3 All fields are required!
                        input.btn.btn-success.btn-block(type="submit", value="Send", class="form-control mt-3")